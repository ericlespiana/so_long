#******************************************************************************#
#                                   PATH                                       #
#******************************************************************************#

SRC_PATH := srcs/
LIB_PATH := libft/
INCS     := include/ $(LIB_PATH)include
CPPFLAGS := $(addprefix -I, $(INCS)) -MP

#******************************************************************************#
#                                  FILES                                       #
#******************************************************************************#

SRCS     += $(addprefix $(SRC_PATH), so_long.c)
OBJS     += $(addprefix obj/, $(notdir $(SRCS:.c=.o)))
NAME     := so_long
LIBFT    := $(addprefix $(LIB_PATH), libft.a) 

#******************************************************************************#
#                               BASH COMMANDS                                  #
#******************************************************************************#

RM       := rm -rf
BUILD    := obj/

#******************************************************************************#
#                                COMPILATION                                   #
#******************************************************************************#

CC       := cc
CFLAGS   := -Wall -Wextra -Werror

#******************************************************************************#
#                                  TARGETS                                     #
#******************************************************************************#

all: $(LIBFT) $(NAME)

$(LIBFT):
	make -C libft/

$(NAME): obj $(OBJS)
	$(CC) $(OBJS) $(LIBFT) -o $@
	echo "Execut√°vel $@ criado com sucesso!"

obj:
	mkdir -p $(BUILD)

obj/%.o: $(SRC_PATH)%.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $< -o $@

clean:
	make fclean -C libft/
	$(RM) $(BUILD)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean

.DEFAULT_GOAL := all

.SILENT: